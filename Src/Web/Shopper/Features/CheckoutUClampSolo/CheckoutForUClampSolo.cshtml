<div class="card FrmCard">
  <div class="card-body">
    <form asp-controller="CheckoutUClampSolo" asp-action="CheckoutForUClampSolo" method="post" id="CheckoutForm" class="CheckoutForm">
  <partial name="_FormContent" />
</form>
  </div>
